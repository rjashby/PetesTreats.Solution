@{
  Layout = "_Layout";
}

@model PetesTreats.Models.Treat

<h4>Add a New Sweet Treat to the List!</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select a Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add new treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>